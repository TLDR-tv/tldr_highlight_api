# TL;DR Highlight API Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
APP_NAME="TL;DR Highlight API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# API Settings
API_V1_PREFIX="/api/v1"
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security Settings
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_MINUTES=60

# CORS Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"
CORS_ALLOW_CREDENTIALS=true

# Database Settings (PostgreSQL)
DATABASE_URL="postgresql://tldr_user:tldr_password@localhost:5433/tldr_highlights"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis Settings
REDIS_URL="redis://:tldr_redis_password@localhost:6379/0"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD="tldr_redis_password"
REDIS_DB=0
REDIS_MAX_CONNECTIONS=100

# S3/MinIO Settings
S3_ENDPOINT_URL="http://localhost:9010"
S3_ACCESS_KEY_ID="tldr_minio_admin"
S3_SECRET_ACCESS_KEY="tldr_minio_password"
S3_REGION="us-east-1"
S3_HIGHLIGHTS_BUCKET="tldr-highlights"
S3_THUMBNAILS_BUCKET="tldr-thumbnails"
S3_TEMP_BUCKET="tldr-temp"

# Celery/RabbitMQ Settings
CELERY_BROKER_URL="amqp://tldr_user:tldr_password@localhost:5673/tldr_vhost"
CELERY_RESULT_BACKEND="redis://:tldr_redis_password@localhost:6379/1"
CELERY_TASK_ALWAYS_EAGER=false

# AI/ML Settings
AI_PROVIDER="openai"  # Options: openai, gemini, anthropic, custom
AI_API_KEY="your-openai-api-key-here"
GEMINI_API_KEY="your-gemini-api-key-here"
AI_MODEL_NAME="gpt-4"
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Webhook Settings
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY_SECONDS=60

# Logging Settings
LOG_LEVEL="INFO"
LOG_JSON_FORMAT=false

# Feature Flags
FEATURE_BATCH_PROCESSING=true
FEATURE_WEBHOOKS=true
FEATURE_ANALYTICS=true
FEATURE_CUSTOM_MODELS=false