# Environment
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tldr_highlights

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_SECONDS=3600

# API
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# AWS S3
S3_BUCKET_NAME=tldr-highlights
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# Stream Processing
SEGMENT_DURATION_SECONDS=120
SEGMENT_BUFFER_SIZE=10

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/3

# Global rate limits
RATE_LIMIT_GLOBAL=1000/minute
RATE_LIMIT_BURST=20

# Endpoint-specific rate limits
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_STREAM_CREATE=20/minute
RATE_LIMIT_STREAM_PROCESS=10/minute
RATE_LIMIT_WEBHOOK=5/hour

# Organization tier limits
RATE_LIMIT_TIER_FREE=100/minute
RATE_LIMIT_TIER_PRO=1000/minute
RATE_LIMIT_TIER_ENTERPRISE=10000/minute

# Webhooks
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json