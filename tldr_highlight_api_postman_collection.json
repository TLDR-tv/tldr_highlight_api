                  "const jwt = require('jsonwebtoken');",
                  "const uuid = require('uuid');",
                  "",
                  "const secret = 'test-secret-key-for-development-only';",
                  "const payload = {",
                  "    sub: pm.collectionVariables.get('organization_id') || uuid.v4(),",
                  "    resource_type: 'clip',",
                  "    stream_id: pm.collectionVariables.get('stream_id') || uuid.v4(),",
                  "    highlight_ids: [uuid.v4(), uuid.v4()],",
                  "    type: 'content_access',",
                  "    iat: Math.floor(Date.now() / 1000),",
                  "    exp: Math.floor(Date.now() / 1000) + 3600, // 1 hour",
                  "    custom_field: 'test_value'",
                  "};",
                  "",
                  "// Note: This is for testing only - in production, tokens should be generated server-side",
                  "try {",
                  "    const token = jwt.sign(payload, secret, { algorithm: 'HS256' });",
